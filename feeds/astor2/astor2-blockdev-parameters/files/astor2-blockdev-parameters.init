#!/bin/sh /etc/rc.common
START=49

READ_AHEAD=2048
MAX_SECTORS=64
SCHEDULER=cfq

start()
{
	for drive in /sys/block/sd*; do
		echo $READ_AHEAD > $drive/queue/read_ahead_kb
		echo $MAX_SECTORS > $drive/queue/max_sectors_kb
		echo $SCHEDULER > $drive/queue/scheduler
	done
}

stop()
{
	true
}

restart()
{
	stop
	start
}
